<resources>

	<style name="Theme.Drinkizy" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_drinkizy</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Drinkizy</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Drinkizy</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Drinkizy</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Drinkizy</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Drinkizy</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_drinkizy</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_drinkizy</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Drinkizy</item>
        
    </style>

    <style name="ActionBar.Solid.Drinkizy" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_drinkizy</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_drinkizy</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_drinkizy</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Drinkizy</item>
    </style>

    <style name="ActionBar.Transparent.Drinkizy" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_drinkizy</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Drinkizy</item>
    </style>

    <style name="PopupMenu.Drinkizy" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_drinkizy</item>	
    </style>

    <style name="DropDownListView.Drinkizy" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_drinkizy</item>
    </style>

    <style name="ActionBarTabStyle.Drinkizy" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_drinkizy</item>
    </style>

    <style name="DropDownNav.Drinkizy" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_drinkizy</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_drinkizy</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_drinkizy</item>
    </style>
    
    <style name="ProgressBar.Drinkizy" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_drinkizy</item>
    </style>
    
    <style name="ActionButton.CloseMode.Drinkizy" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_drinkizy</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Drinkizy.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Drinkizy</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Drinkizy</item>
    </style>
	
    <style name="drinkizyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>
    
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
	    <item name="android:textColor">@android:color/black</item>
	</style>
</resources>
