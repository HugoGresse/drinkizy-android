<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

	    <ImageView
	        android:id="@+id/about_logo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:adjustViewBounds="true"
	        android:contentDescription="@string/app_name"
	        android:paddingBottom="10dp"
	        android:paddingLeft="80dp"
	        android:paddingRight="80dp"
	        android:paddingTop="20dp"
	        android:scaleType="fitEnd"
	        android:src="@drawable/drinkizy_logo_dark" />
	
	    <TextView
	        android:id="@+id/about_created"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/about_logo"
	        android:layout_centerHorizontal="true"
	        android:gravity="center_vertical|center_horizontal"
	        android:text="@string/about_created"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/about_project"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/about_created"
	        android:layout_marginBottom="30dp"
	        android:layout_marginTop="30dp"
	        android:text="@string/about_project"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/about_library"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/about_project"
	        android:text="@string/about_library"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <TextView
	        android:id="@+id/about_libraries"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/about_library"
	        android:layout_marginBottom="4dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="4dp"
	        android:autoLink="web"
	        android:linksClickable="true"
	        android:text="@string/about_library"
	        android:textColorLink="@color/orange_drinkizy" />

	    <ImageView
	        android:id="@+id/logo_imac"
	        android:layout_width="wrap_content"
	        android:layout_height="70dp"
	        android:layout_below="@id/about_libraries"
	        android:layout_marginBottom="20dp"
	        android:layout_marginTop="20dp"
	        android:contentDescription="@string/about_imaclogo"
	        android:scaleType="centerInside"
	        android:src="@drawable/imac" />
	
	</RelativeLayout>
</ScrollView>